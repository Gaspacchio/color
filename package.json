    "lint-md": "remark . -o",
    "build": "sass src/style.scss dist/style.css"
  },
  "author": "Gaspacchio",
  "license": "MIT",
  "dependencies": {
    "knacss": "^7.1.0"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "sass": "^1.16.1"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-lint-emphasis-marker",
      "remark-lint-strong-marker"
    ]
  }
}
